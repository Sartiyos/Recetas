<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorFondo"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iw_foto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chef" />

    <TextView
        android:id="@+id/iw_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iw_foto"
        android:paddingLeft="5dp"
        android:text="@string/regNombre"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iw_nombre"
        android:layout_toRightOf="@id/iw_foto"
        android:paddingLeft="5dp"
        android:text="@string/regEmail"
        android:textSize="14sp" />

</RelativeLayout>